LIBS = @LIBS@ @GLU_LIBS@ @FFMPEG_LIBS@

CPPFLAGS = @CPPFLAGS@ @GLU_CFLAGS@ @FFMPEG_CFLAGS@

SUBDIRS = core
CXX = g++
CC = gcc
objects = zoomcamera.o slider.o spline.o dirnode.o action.o pawn.o file.o user.o gource.o commitlog.o git.o gitraw.o custom.o cvs-exp.o ffmpeg.o main.o

all:	
	for dir in ${SUBDIRS} ; do ( cd $$dir ; ${MAKE} all ); done
	${MAKE} gource

distclean:
	for dir in ${SUBDIRS} ; do ( cd $$dir ; ${MAKE} distclean ); done
	rm Makefile

clean:
	for dir in ${SUBDIRS} ; do ( cd $$dir ; ${MAKE} clean ); done
	rm -f *.o *.d

gource: $(objects) 
	$(CXX) $(CPPFLAGS) -o $@ core/*.o $+ $(LIBS)
	mv $@ ..

%.o: %.cpp
	$(CXX) $(CPPFLAGS) -o $@ -c $<

ifndef NODEPS
ifeq ($(findstring clean,$(MAKECMDGOALS)),)
dfiles = $(patsubst %.o,%.d,$(objects))
%.d: %.cpp
	$(CXX) $< -o $@ -MT $(patsubst %.cpp,%.o,$<) -MM $(CPPFLAGS)
-include $(dfiles)
endif
endif # NODEPS

